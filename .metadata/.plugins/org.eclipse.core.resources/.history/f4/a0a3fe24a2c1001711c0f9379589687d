		CourseNum com311 = new CourseNum(cs, 311);
		Course course311 = new Course(com311, "Algorithms", null, startTime, endTime, monWed()  );
		allCourses.put(com311,  course311);
		
		CourseNum com326 = new CourseNum(cs, 326);
		Course course326 = new Course(com326, "Web Programming", null, startTime, endTime, TueThur() );
		allCourses.put(com326,  course326);
		
		CourseNum com345 = new CourseNum(cs, 345);
		Course course345 = new Course(com326, "Data Management", null, startTime, endTime, monWed()  );
		allCourses.put(com345,  course345);
		
		CourseNum com377 = new CourseNum(cs, 377);
		Course course377 = new Course(com326, "Operating Systems", null, startTime, endTime, TueThur() );
		allCourses.put(com377,  course377);
		
		
	}
	
